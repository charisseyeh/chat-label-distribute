{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/preload",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/preload/**/*"
  ],
  "exclude": [
    "src/main/**/*",
    "src/renderer/**/*",
    "node_modules"
  ]
}
